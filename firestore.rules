rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.authorId;

      match /comments/{commentId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isSignedIn() && (request.auth.uid == resource.data.authorId || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.authorId);
        
        match /likes/{likeId} {
          allow read, write: if isSignedIn();
        }
      }

      match /likes/{likeId} {
        allow read, write: if isSignedIn();
      }
    }

    match /audioRooms/{roomId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.creatorId;
      // Let client logic handle deletion of subcollections for now
      allow delete: if isSignedIn() && request.auth.uid == resource.data.creatorId;

      match /{subcollection}/{docId} {
        allow read, write: if isSignedIn();
      }
    }

    match /chats/{chatId} {
      allow list: if isSignedIn() && request.auth.uid in request.query.where.participants;
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    match /notifications/{notificationId} {
      allow get: if isSignedIn() && request.auth.uid == resource.data.recipientId;
      allow list: if isSignedIn() && request.query.where.recipientId == request.auth.uid;
      allow write: if isSignedIn();
    }
    
    match /signals/{signalId} {
      allow get: if isSignedIn() && request.auth.uid == resource.data.to;
      allow list: if isSignedIn() && request.query.where.to == request.auth.uid;
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.to || request.auth.uid == resource.data.from);
    }
  }
}
